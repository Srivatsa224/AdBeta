<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HoardingUpload">

    <EditText
        android:id="@+id/et_size"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-236dp"
        android:layout_marginLeft="-236dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/button_choose_image"
        android:layout_toRightOf="@+id/button_choose_image"
        android:hint="Enter Size in (W*H)" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-236dp"
        android:layout_marginLeft="-236dp"
        android:layout_marginTop="84dp"
        android:layout_toEndOf="@+id/button_choose_image"
        android:layout_toRightOf="@+id/button_choose_image"
        android:hint="Enter Price/month" />

    <EditText
        android:id="@+id/et_maplink"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-236dp"
        android:layout_marginLeft="-236dp"
        android:layout_marginTop="131dp"
        android:layout_toEndOf="@+id/button_choose_image"
        android:layout_toRightOf="@+id/button_choose_image"
        android:hint="Enter Map Link" />

    <Button
        android:id="@+id/button_choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_view"
        android:layout_alignEnd="@+id/button_upload"
        android:layout_alignRight="@id/button_upload"
        android:layout_marginBottom="-211dp"
        android:text="Choose file" />

    <EditText
        android:id="@+id/et_loc"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-236dp"
        android:layout_marginLeft="-236dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/button_choose_image"
        android:layout_toRightOf="@+id/button_choose_image"
        android:hint="Enter Location" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="193dp"
        android:layout_height="172dp"
        android:layout_above="@id/progress_bar"
        android:layout_below="@id/et_loc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="211dp"
        android:layout_marginBottom="1dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Upload" />

    <TextView
        android:id="@+id/text_view_show_uploads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_upload"
        android:layout_alignTop="@+id/button_upload"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_toEndOf="@+id/button_upload"
        android:layout_toRightOf="@+id/button_upload"
        android:gravity="center"
        android:text="Show Uploads"
        android:textSize="16sp" />

    <AutoCompleteTextView
        android:id="@+id/autocom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_maplink"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="185dp"
        android:layout_marginRight="185dp" />


</RelativeLayout>
